<Page
    x:Class="SoupView.View.OperationGraphPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:SoupView.View"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:viewmodel="using:SoupView.ViewModel"
    mc:Ignorable="d">

    <Grid Name="Root" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <view:GraphViewer
            Grid.Row="0"
            Graph="{Binding Graph}" />

        <StackPanel Grid.Row="0">
            <controls:InfoBar
                Severity="Error"
                Title="Error"
                IsOpen="{Binding IsErrorBarOpen}"
                Message="{Binding ErrorBarMessage}" />
        </StackPanel>
    </Grid>
</Page>
